<% page_title 'Dashboard' %>
<% page_class 'dashboard-index' %>

<div class="legacy-bootstrap">
  <h1>Dashboard</h1>
</div>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-one-third">
    <h2 class="govuk-heading-l">Writing and publishing</h2>
    <ul class="govuk-list govuk-list--bullet">
      <li><%= link_to('Content Data',
                      content_data_home_url,
                      class: "govuk-link",
                      data: {
                          track_category: 'external-link-clicked',
                          track_action: content_data_home_url,
                          track_label: 'Content Data'
                      })%>
      </li>
      <li><a href="https://www.gov.uk/guidance/style-guide" class="govuk-link">GOV.UK style guide</a></li>
      <li><a href="https://www.gov.uk/guidance/how-to-publish-on-gov-uk" class="govuk-link">How to publish content on GOV.UK</a></li>
      <li><a href="https://www.gov.uk/guidance/content-design" class="govuk-link">Planning, writing and managing content</a></li>
    </ul>
  </div>

  <div class="govuk-grid-column-one-third">
    <h2 class="govuk-heading-l">Product development</h3>
    <ul class="govuk-list govuk-list--bullet">
      <li><a href="https://insidegovuk.blog.gov.uk/" class="govuk-link">Inside GOV.UK blog</a></li>
    </ul>
  </div>

  <div class="govuk-grid-column-one-third">
    <h2 class="govuk-heading-l">Support</h2>
    <ul class="govuk-list govuk-list--bullet">
      <li><a href="https://www.gov.uk/support/internal" class="govuk-link">GDS support form (Zendesk)</a></li>
      <li><%= link_to "Find in admin bookmarklet", admin_find_in_admin_bookmarklet_instructions_index_path, class: "govuk-link" %></li>
    </ul>
  </div>
</div>

<div class="legacy-bootstrap">
  <div class="row">
    <div class="col-md-6 draft-documents">
      <h2>My draft documents</h2>
      <%= render partial: 'document_table', locals: { documents: @draft_documents, title: 'draft documents' } %>
    </div>
    <% if current_user.organisation %>
      <div class="col-md-6 force-published-documents">
        <h2>
          <%= organisation_acronym_or_name(current_user.organisation) %>â€™s
          force-published documents
        </h2>
        <%= render partial: 'document_table', locals: { documents: @force_published_documents, title: 'force published documents' } %>
        <p><%= link_to "See all", admin_editions_path(state: :force_published, organisation: current_user.organisation) %></p>
      </div>
    <% end %>
  </div>
</div>
